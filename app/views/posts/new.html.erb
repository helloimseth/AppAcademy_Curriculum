<h1>Add A Post</h1>
<form action="<%= posts_url %>" method="post">
  <%= auth_token %>

  <label for="post_title">Title of post</label><br>
  <input type="text" name="post[title]" value="<%= @post.title %>">

  <br><br>

  <label for="post_url">URL</label><br>
  <input type="text" name="post[url]" value="<%= @post.url %>">

  <br><br>

  <label for="post_content">Content</label><br>
  <textarea name="post[content]" rows="8" cols="40">
    <%= @post.content %>
  </textarea>

  <input type="hidden" name="sub_id" value="<%= @post.sub.id %>">
  <!-- sends sub_id of the instance variable to create action in PostsController -->
  <%= submit_button %>
</form>
